<% layout('/layouts/boilerplate') %>

<body>
    
    <!-- <form action="/listings/new" method="GET">
    <button>Create New Listing</button>
  </form> -->

  <div class="container">
    <h1 class="my-4">All Listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      <% allListings.forEach((listing) => { %>
        <a href="/listings/<%- listing._id %>" class="listingLink">
        <div class="col-md-4" style="width: 20rem;">
          <div class="card">
            <img style="height: 20rem !important" src="<%- listing.image %>" class="card-img-top" alt="<%= listing.title %>">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <h5 class="card-title"><b><%= listing.title %></b></h5>
             <h5><p><strong>Price:</strong> &#8377;<%= listing.price %>/ Night</p></h5> 
              <p><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>

