<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-8 offset-2">
        <br/><br/>
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" novalidate class="needs-validation">

            <div class="mb-3">
                <label for="title" class="form-label">Title</label><br>
                <input class="form-control" name="listing[title]" placeholder="Add a catchy title" type="text" required />
                <div class="valid-feedback">Title looks good</div>
                <div class="invalid-feedback">Please provide a title for the listing.</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label><br>
                <textarea class="form-control" name="listing[description]" placeholder="Enter description" required></textarea>
                <div class="invalid-feedback">Please enter a description.</div>
            </div>

            <div class="mb-3">
                <label for="image-url" class="form-label">Image URL:</label><br>
                <input class="form-control" name="listing[image_url]" id="image-url" placeholder="Enter image URL/Link" type="url" />
                <div class="invalid-feedback">Please enter a valid URL for the image.</div>
            </div>

            <div class="mb-3">
                <label for="image-file" class="form-label">Upload Image:</label><br>
                <input class="form-control" name="listing[image_file]" id="image-file" type="file" accept="image/*" />
            </div> 

            <div class="row">
                <div class="mb-3 col-4">
                    <label for="price" class="form-label">Price</label><br>
                    <input class="form-control" name="listing[price]" placeholder="Enter price" type="number" min="1" required />
                    <div class="invalid-feedback">Please enter a valid price greater than zero.</div>
                </div>

                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label><br>
                    <input class="form-control" name="listing[country]" placeholder="Enter country" type="text" required />
                    <div class="invalid-feedback">Please enter the country name.</div>
                </div>
            </div>

            <div class="mb-3">
                <label for="location" class="form-label">Location</label><br>
                <input class="form-control" name="listing[location]" placeholder="Enter location" type="text" required />
                <div class="invalid-feedback">The location should be valid.</div>
            </div>

            <button type="submit" class="btn btn-dark add-btn">Add</button>
            <br/><br/>
        </form>
    </div>
</div>

<script src="/Js/script.js"></script>
<script>
// JavaScript for Bootstrap form validation
(function() {
    'use strict';
    // Fetch all forms with the 'needs-validation' class
    var forms = document.querySelectorAll('.needs-validation');

    // Loop over each form and prevent submission if invalid
    Array.prototype.slice.call(forms).forEach(function(form) {
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            form.classList.add('was-validated');
        }, false);
    });
})();
</script>
