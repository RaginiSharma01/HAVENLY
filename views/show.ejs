<% layout('/layouts/boilerplate') %>
<script>
  const mapToken = "<%=process.env.MAP_TOKEN%>";
</script>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3><%- listing.title %>:</h3>

      <!-- Listing Card -->
      <div class="card col-6 offset-2 show-card listing-card">
        <% if (listing.image) { %>
          <!-- Handles both Cloudinary {url: "..."} and string URL -->
          <img src="<%= listing.image.url ? listing.image.url : listing.image %>" 
               class="card-img-top show-img" alt="listing_img">
        <% } %>
        <div class="card-body">
          <h5 class="card-title">
            <i>Posted by: <%= listing.owner ? listing.owner.username : "Unknown" %></i>
          </h5>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text">Price: &#8377;<%= listing.price %></p>
          <p class="card-text">Location: <%= listing.location %></p>
          <p class="card-text">Country: <%= listing.country %></p>
        </div>
      </div>
      <br>

      <!-- Edit/Delete Buttons -->
      <% if (currUser && listing.owner && currUser._id.toString() === listing.owner._id.toString()) { %>
        <div class="col-1">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
        </div>
        <div class="col-1 mt-2">
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark edit-btn">Delete</button>
          </form>
        </div>
      <% } %>

      <hr>

      <!-- Add Review -->
      <% if (currUser) { %>
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
          
          <!-- Star Rating -->
          <fieldset class="starability-basic mb-3">
            <legend>Ratings:</legend>
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
            <input type="radio" id="rate1" name="review[rating]" value="1" />
            <label for="rate1" title="Terrible">1 star</label>
            <input type="radio" id="rate2" name="review[rating]" value="2" />
            <label for="rate2" title="Not good">2 stars</label>
            <input type="radio" id="rate3" name="review[rating]" value="3" />
            <label for="rate3" title="Average">3 stars</label>
            <input type="radio" id="rate4" name="review[rating]" value="4" />
            <label for="rate4" title="Very good">4 stars</label>
            <input type="radio" id="rate5" name="review[rating]" value="5" />
            <label for="rate5" title="Amazing">5 stars</label>
          </fieldset>

          <!-- Comment -->
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea name="review[comment]" id="comment" class="form-control" rows="4" required></textarea>
            <div class="invalid-feedback">Please add a review comment.</div>
          </div>

          <button class="btn btn-outline-dark">Submit</button>
        </form>
      <% } %>

      <hr>

      <!-- All Reviews -->
      <% if (listing.reviews && listing.reviews.length > 0) { %>
        <div class="row">
          <p><b>All Reviews</b></p>
          <% for (const review of listing.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                <h5 class="card-title">
                  <%= review.owner ? review.owner.username : "Anonymous" %>
                </h5>
                <p class="card-text"><%= review.comment %></p>
                <p class="starability-result" data-rating="<%= review.rating %>">
                  Rated: <%= review.rating %> stars
                </p>
              </div>

              <!-- Delete Review Button (only if user owns review) -->
              <% if (currUser && review.owner && currUser._id.toString() === review.owner._id.toString()) { %>
                <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <button class="btn btn-sm btn-dark">Delete</button>
                </form>
              <% } %>
            </div>
          <% } %>
        </div>
      <% } %>

    </div>

    <div class="col-8 offset-3 mb3">
      <h3>Where you will be</h3>
      <div id="map" style="width: 100%; height: 400px;"></div>
    </div>
  </div>


<script src="/js/map.js"></script>
</body>
