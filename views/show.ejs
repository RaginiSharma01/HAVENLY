<% layout('/layouts/boilerplate') %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3>Listing Details:</h3>

      <div class="card col-6 offset-2 show-card">
        <img src="<%- listing.image %>" class="card-img-top show-img" alt="listing_img">
        <div class="card-body">
          <h5 class="card-title">
            <b><%- listing.title %></b>
          </h5>
          <br>
          <p>
            <%= listing.description %>
            <br>
            &#8377; <%= listing.price %>
            <br>
            <%= listing.location %>
            <br>
            <%= listing.country %>
            <br>
          </p>
        </div>
      </div>
      <br>
      <div class="col-1">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
      </div>
      <br>
      <div class="col-1">
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark edit-btn">Delete</button>
        </form>
      </div>
      <br>
    </div>
  </div>
</body>
