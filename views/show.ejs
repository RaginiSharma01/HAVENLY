<% layout('/layouts/boilerplate') %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <h3><%- listing.title %>:</h3>

      <div class="card col-6 offset-2 show-card listing-card">
        <img src="<%- listing.image %>" class="card-img-top show-img" alt="listing_img">
        <div class="card-body">
          <h5 class="card-title">
            <i>Posted by: <%= listing.owner && listing.owner.username ? listing.owner.username : "Unknown" %></i>
          </h5>
          <br>
          <p class="card-text"><%= listing.description %></p>
          <p class="card-text">Price: &#8377;<%= listing.price %></p>
          <p class="card-text">Location: <%= listing.location %></p>
          <p class="card-text">Country: <%= listing.country %></p>
        </div>
      </div>
      <br>

      <% if (currUser && listing.owner && listing.owner._id && currUser._id && listing.owner._id.toString() === currUser._id.toString()) { %>
        <div class="col-1">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit</a>
        </div>
        <br>
        <div class="col-1">
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark edit-btn">Delete</button>
          </form>
        </div>
      <% } %>

      <!-- <div class="col-8 mb-3">
        <hr>
        <% if (currUser) { %>
          <h4>Leave a Review</h4>
          <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
            </div> -->

            <!-- feild set for startabiliy -->
             <fieldset class="starability-basic">
  <legend>Ratings:</legend>
  <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="rating" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="rating" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="rating" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="rating" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="rating" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
  
</fieldset>
<div class="col-8 mb-3"></div>
            <div class="mb-3">
              <label for="comment" class="form-label">Comments</label>
              <textarea name="review[comment]" id="comment" cols="40" rows="5" class="form-control" required></textarea>
              <div class="invalid-feedback">Please add some review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
          </form>
        <% } %>

        <hr>
        <p><b>All Reviews</b></p>
        <div class="row">
          <% for (const review of listing.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                <h5 class="card-title">Jennie</h5> <!-- Replace with reviewer name if available -->
                <p class="card-text"><%= review.comment %></p>
                <p class="starability-result" data-rating="3">
                  Rated: 3 stars
                </p>
              </div>
              <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</body>
